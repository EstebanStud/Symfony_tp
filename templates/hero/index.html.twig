{% extends 'base.html.twig' %}

{% block title %}Hello heroController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    Heroes list :
    <ul>
        {% for user in users %}
            <li><a href="{{ path('user_details', {'id': user.id}) }}">{{ user.name }}</a></li>
        {% endfor %}
    </ul>
    <button><a href="{{ path('user_create') }}">Create a hero</a></button>
</div>
</div>
{% endblock %}
